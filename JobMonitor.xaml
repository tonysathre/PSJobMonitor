<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PS Job Monitor" Height="350" Width="525">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ListBox x:Name="JobList" Grid.Column="0" Margin="10" />

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        <TextBox x:Name="JobOutput" Grid.Column="2" Margin="10" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" />

        <Button x:Name="RefreshButton" Grid.Column="0" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Refresh" />
        <Button x:Name="CancelButton" Grid.Column="2" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="Cancel" />
    </Grid>
</Window>